{% extends "bundles/FOSUserBundle/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}<title>Confirmation du compte | {{ config.get.name }}</title>{% endblock %}

{% block app_navbar_three %}
    <div class="view" style="background-image: url('https://mdbootstrap.com/img/Photos/Others/city10.jpg'); background-repeat: no-repeat; background-size: cover;">
        <div class="mask rgba-black-strong d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row d-flex justify-content-center mt-5 mt-md-3 mt-lg-5 pt-lg-5 wow fadeIn">
                    <div class="col-9 col-md-6 col-lg-8 mb-4 px-lg-5 px-md-4 white-text text-center">
                        <h1 class="display-4 font-weight-bold d-none d-md-block mt-lg-5 pt-md-2 pt-lg-5
                        mt-md-0 text-center">Confirmation du compte</h1>
                        <h1 class="display-5 font-weight-bold d-block d-md-none text-center">Confirmation du compte</h1>

                        <hr class="hr-light hr-bold mt-1">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bc text-white">
        <div class="pt-3 pl-4 container">
            {{ breadcrumb('Confirmation du compte') }}
            {{ wo_render_breadcrumbs({ viewTemplate: '_breadcrumb.html.twig', listClass: 'breadcrumb',
                itemClass: 'breadcrumb-item', separator: '>', separatorClass: 'fas fa-angle-right'}) }}
        </div>
    </div>
{% endblock %}

{% block app_body %}
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                {% if targetUrl %}
                    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
