{% trans_default_domain 'FOSUserBundle' %}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-5">
                <div class="card">
                    <div class="card-body">
                        {% if error %}
                            <div class="text-center text-danger font-weight-stone-500">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}

                            <div class="mx-1 mx-md-3">
                                <div class="md-form md-outline form-lg input-with-pre-icon">
                                    <i class="fas fa-envelope input-prefix"></i>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                                           class="form-control form-control-lg" required="required" autocomplete="username" />
                                    <label for="username">Nom d'utilisateur ou email</label>
                                </div>

                                <div class="md-form md-outline form-lg input-with-pre-icon mb-0">
                                    <i class="fas fa-unlock input-prefix"></i>
                                    <input type="password" id="password" name="_password" required="required"
                                           class="form-control form-control-lg" autocomplete="current-password" />
                                    <label for="password">{{ 'security.login.password'|trans }}</label>
                                </div>

                                <div class="text-right">
                                    <a href="{{ path('fos_user_resetting_request') }}" class="font-weight-stone-500 link">Mot de passe oublié ?</a>
                                </div>

                                <div class="switch stone-switch">
                                    <label  for="remember_me">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
                                        <span class="lever"></span>
                                        Garder ma session ouverte sur cet ordinateur
                                    </label>
                                </div>
                            </div>

                            <div class="text-center mt-3">
                                <input type="submit" id="_submit" name="_submit" class="btn btn-primary font-weight-stone-500" value="{{ 'security.login.submit'|trans }}" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-5">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="h5-responsive text-primary font-weight-stone-600 pb-2">
                            Vous n'avez pas de compte ?
                        </h5>
                        <div>
                            Créer un compte dès maintenant.
                            C'est facile, rapide et gratuit !
                        </div>
                        <div class="mt-3">
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">S'inscrire</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
