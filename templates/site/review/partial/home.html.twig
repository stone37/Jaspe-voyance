{% if settings.activeTemoignages %}
    {% if reviews|length > 0 %}
        <div class="container my-5">
            <section class="team-section text-center dark-grey-text">
                <h1 class="h1-responsive font-weight-600 text-primary text-center mb-3">TÃ©moignages</h1>
                <div class="row text-center">
                    {% for review in reviews %}
                        <div class="col-md-4 mb-4">
                            <div class="testimonial">
                                <h4 class="font-weight-600 text-secondary mt-4">{{ review.name }}</h4>
                                <p class="font-weight-normal dark-grey-text">
                                    <i class="fas fa-quote-left pr-2"></i> {{ review.description }}
                                </p>
                                <div class="text-primary">
                                    {% if review.note == 5 %}
                                        {% for item in 1..(review.note) %}
                                            <i class="fas fa-star"> </i>
                                        {% endfor %}
                                    {% else %}
                                        {% for item in 1..(review.note) %}
                                            <i class="fas fa-star"> </i>
                                        {% endfor %}

                                        {% for item in (review.note+1)..5 %}
                                            <i class="far fa-star"> </i>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        </div>
    {% endif %}
{% endif %}


