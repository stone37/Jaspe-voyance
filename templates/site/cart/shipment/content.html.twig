{% form_theme form 'Ui/Form/theme.html.twig' %}

<section class="my-4">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'admin-form'}}) }}
                    <P class="text-danger my-0">{{ form_errors(form) }}</P>

                    {% include 'site/cart/shipment/form.html.twig' %}

                    {{ form_widget(form._token) }}

                    <div class="d-flex justify-content-center mt-4">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Valider mon adresse</button>
                        </div>
                    </div>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
</section>