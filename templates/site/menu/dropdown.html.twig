{% if is_mobile() %}
    <div class="d-none d-md-flex" style="margin-top: 4px;">
        <a href="{{ path('app_cart_index') }}" class="nav-link dark-grey-text">
            <span class="badge badge-secondary" style="position: relative; left: 4px; bottom: 3px;">{{ app.session.get('app_cart')|length }}</span>
            <i class="fas fa-shopping-cart" style="font-size: 1.2rem;"></i>
        </a>
    </div>
    <div class="avatar dropdown d-none d-md-flex" style="margin-top: 9px;">
        <a class="dropdown-toggle" id="userDropdownMenu" data-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
            {% if vich_uploader_asset(user, 'file') %}
                <img src="{{ vich_uploader_asset(user, 'file') }}" style="margin-top: -5px;"
                     class="rounded-circle img-fluid z-depth-1" alt="avatar image">
            {% else %}
                <span class="user-prefix d-inline-block rounded-circle">
                {{ app_prefix_user_name(user) }}
            </span>
            {% endif %}
        </a>
        <div class="dropdown-menu dropdown-menu-md-right  dropdown-primary"
             aria-labelledby="userDropdownMenu" style="margin-top: 1px !important;">
            {% if is_granted("ROLE_ADMIN") %}
                <a class="dropdown-item" href="{{ path('app_admin_dashboard') }}">
                    <i class="fas fa-user-secret mr-2"></i>
                    Adminitration
                </a>
                <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">
                    <i class="fas fa-power-off mr-2"></i>
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a class="dropdown-item" href="{{ path('app_dashboard_index') }}">
                    <i class="fas fa-th-large mr-2"></i>
                    Tableau de bord
                </a>
                <a class="dropdown-item" href="{{ path('app_dashboard_order_index') }}">
                    <i class="fas fa-shopping-bag mr-2"></i>
                    Mes commandes
                </a>

                <a class="dropdown-item" href="{{ path('fos_user_profile_show') }}">
                    <i class="fas fa-user mr-2"></i>
                    Mon profil
                </a>
                <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">
                    <i class="fas fa-power-off mr-2"></i>
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% endif %}
        </div>
    </div>

    {% if is_granted("ROLE_ADMIN") %}
        <div class="d-block d-md-none">
            <a href="{{ path('app_admin_dashboard') }}" type="button"
               class="btn btn-secondary btn-sm btn-block waves-effect waves-light mb-1">Administration</a>
        </div>
    {% else %}
        <div class="d-block d-md-none">
            <a href="{{ path('fos_user_profile_show') }}" type="button"
               class="btn btn-secondary btn-sm btn-block waves-effect waves-light mb-1">Mon profil</a>
            <a href="{{ path('app_dashboard_order_index') }}" type="button"
               class="btn btn-primary btn-sm btn-block waves-effect waves-light">Mes commamdes</a>
        </div>
    {% endif %}
{% else %}
    <li class="nav-item app-user-menu-dropdown mr-lg-3">
        <a href="{{ path('app_cart_index') }}" class="nav-link" data-toggle="tooltip" title="Votre panier">
            <span class="badge badge-secondary" style="position: relative; left: 5px; bottom: 2px;">{{ app.session.get('app_cart')|length }}</span>
            <i class="fas fa-shopping-cart"></i>
        </a>
    </li>
    <li class="nav-item app-user-menu-dropdown avatar dropdown my-lg-1 my-md-2 my-0">
        <a class="nav-link dropdown-toggle" id="userDropdownMenu" data-toggle="dropdown"
           aria-haspopup="true" aria-expanded="false">
