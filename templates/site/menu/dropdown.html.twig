                </a>
                <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">
                    <i class="fas fa-power-off mr-2"></i>
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% endif %}
        </div>
    </li>
{% endif %}
