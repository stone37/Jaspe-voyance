<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="h1-responsive text-primary text-center font-weight-600 wow fadeIn">
                    Infos, trucs et astuces pour voyances et rencontres
                </h1>
            </div>
        </div>
        <div class="row mt-4 pt-3">
            <div class="col-lg-9 col-md-8 col-12 mt-1">
                {% if posts|length > 0 %}
                <section class="section extra-margins pb-3 text-center text-lg-left wow fadeIn">
                    <div class="row mb-4">

                        {% for post in posts %}
                            <div class="col-12">
                                <div class="card">
                                    <div class="view overlay">
                                        <img src="{{ vich_uploader_asset(post, 'file') }}" class="card-img-top" alt="">
                                        <a>
                                            <div class="mask rgba-white-slight"></div>
                                        </a>
                                    </div>
                                    <div class="card-body mx-4">
                                        <h4 class="card-title">
                                            <strong>{{ post.title|truncate(25) }}</strong>
                                        </h4>
                                        <hr>
                                        <p class="dark-grey-text mb-3">
                                            {{ post.content }}
                                        </p>
                                        <p class="font-small font-weight-bold text-secondary mb-1">
                                            <i class="far fa-clock"></i> {{ post.publishedAt|date('d/m/Y') }}
                                        </p>
                                        <p class="font-small dark-grey-text mb-0 font-weight-600">
                                            {{ post.user }}
                                        </p>
                                        <p class="text-right mb-0 font-weight-bold">
                                            <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="btn btn-secondary btn-sm">
                                                Lire la suite <i class="fas fa-angle-right ml-1"></i>
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}

                        <div class="col-12 d-flex justify-content-center mt-2">
                            {{ knp_pagination_render(posts, 'Ui/_pagination.html.twig') }}
                        </div>
                    </div>
                </section>
                {% else %}
                    <div class="row app-user d-flex justify-content-center">
                        <div class="col-12 col-md-8 text-center mt-3 mt-md-5">
                            <h3 class="text-secondary h3-responsive font-weight-stone-600">
                                Aucun article sur le site
                            </h3>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="col-lg-3 col-md-4 col-12">
                {{ render(controller('App\\Controller\\BannerController::index', {'service': 'blog'})) }}

                {{ render(controller('App\\Controller\\PostController::categories')) }}

                {% include 'site/newsletter/_subscribe.html.twig' %}
            </div>
        </div>
    </div>
</section>

