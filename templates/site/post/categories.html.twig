{% if categories|length > 0 %}
    <section class="section mb-5 wow fadeIn">
        <div class="card card-body pb-0">
            <div class="single-post">
                <p class="h4-responsive text-primary text-center spacing grey lighten-4 py-2 mb-4">
                    <strong class="font-weight-600">Cat√©gories</strong>
                </p>
                <ul class="list-group my-4">
                    {% for category in categories %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a class="{{ path('app_post_category', {'slug': category.slug}) }}">
                                <p class="mb-0">{{ category.name }}</p>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
{% endif %}
