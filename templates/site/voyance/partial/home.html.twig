    <section class="mt-5 wow fadeIn">
        <div class="row">
            <div class="col-md-4 mb-4">
                <img src="{{ asset('images/monia.jpg') }}" class="img-fluid z-depth-1-half" alt="">
            </div>
            <div class="col-md-8 mb-4">
