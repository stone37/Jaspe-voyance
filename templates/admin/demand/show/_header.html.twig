<section class="card header mt-md-70 mb-4">
    <div class="card-body py-2">
        <div class="row">
            <div class="col-12">
                <div class="d-flex">
                    <span class="btn-floating btn-lg btn-primary d-none d-md-inline my-0" style="cursor: default;">
                        <i class="fas fa-eye"></i>
                    </span>
                    <h2 class="font-weight-stone-600 text-primary ml-md-3 mt-2 pt-1">
                        {% if type == 1 %}
                            Voir une demandes de consultation par mail
                        {% elseif type == 2 %}
                            Voir une demandes de consultation au téléphone
                        {% else %}
                            Voir un rendez-vous en cabinet
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>
</section>