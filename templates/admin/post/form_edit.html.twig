<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive border border-secondary border-top-0 border-left-0 border-right-0">
            <div class="badge badge-secondary d-inline-block mr-1" style="position: relative; bottom: 6px;">1</div>
            <div class="text-secondary d-inline-block font-weight-stone-600">Information de base</div>
        </div>
    </div>
</div>
<div class="row d-flex justify-content-center justify-content-md-start">
    <div class="col-12 col-md-6">
        {{ form_row(form.title) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
</div>
<div class="row d-flex justify-content-center justify-content-md-start">
    <div class="col-12 col-md-10">
        <div class="md-form md-outline">
            {{ form_widget(form.content) }}
            {{ form_label(form.content) }}
            <div class="red-text font-weight-stone-500">{{ form_errors(form.content) }}</div>
        </div>
        <small class="form-text text-muted" style="margin-top: -15px">
            Ce champ est obligatoire
        </small>
    </div>
</div>

<div class="row d-flex justify-content-center justify-content-md-start mt-3">
    <div class="col-12 col-md-5 mt-3">
        <div class="grey-text pb-1">{{ form.published.vars.label|trans }}</div>
        <div class="switch stone-switch mt-1 ml-md-2">
            <label>
                Non
                <input type="checkbox" name="{{ form.published.vars.full_name }}" id="{{ form.published.vars.id }}"
                       value="{{ form.published.vars.value }}" {% if form.published.vars.checked %}checked="checked{% endif %}">
                <span class="lever"></span>
                Oui
            </label>
        </div>
    </div>
    <div class="col-12 col-md-5 mt-3">
        <div class="grey-text pb-1">{{ form.hasComments.vars.label|trans }}</div>
        <div class="switch stone-switch mt-1 ml-md-2">
            <label>
                Non
                <input type="checkbox" name="{{ form.hasComments.vars.full_name }}" id="{{ form.hasComments.vars.id }}"
                       value="{{ form.hasComments.vars.value }}" {% if form.hasComments.vars.checked %}checked="checked{% endif %}">
                <span class="lever"></span>
                Oui
            </label>
        </div>
    </div>
</div>

<div class="form-row mt-4">
    <div class="col-12">
        <div class="h5-responsive border border-primary border-top-0 border-left-0 border-right-0">
            <div class="badge badge-primary d-inline-block mr-1" style="position: relative; bottom: 6px;">2</div>
            <div class="text-primary d-inline-block font-weight-stone-600">Catégories et étiquettes</div>
        </div>
    </div>
</div>
<div class="row d-flex justify-content-center justify-content-md-between">
    <div class="col-12 col-md-4">
        <div class="font-weight-stone-600 mt-3">{{ form.categories.vars.label }}</div>
        {% for choices in form.categories.vars.choices %}
            <div class="form-check pl-0 mt-1 pr-4">
                <input type="checkbox" name="{{ form.categories.vars.full_name }}" class="form-check-input filled-in"
                       id="{{ form.categories.vars.id }}_{{ loop.index0 }}" value="{{ form.categories.vars.choices[loop.index0].value }}" />
                <label class="form-check-label" for="{{ form.categories.vars.id }}_{{ loop.index0 }}"
                       style="padding-left: 30px; padding-top: 2px;">{{ form.categories.vars.choices[loop.index0].label }}</label>
            </div>
        {% endfor %}
    </div>
    <div class="col-12 col-md-4">
        <div class="font-weight-stone-600 mt-3">{{ form.tags.vars.label }}</div>
        {% for choices in form.tags.vars.choices %}
            <div class="form-check pl-0 mt-1 pr-4">
                <input type="checkbox" name="{{ form.tags.vars.full_name }}" class="form-check-input filled-in"
                       id="{{ form.tags.vars.id }}_{{ loop.index0 }}" value="{{ form.tags.vars.choices[loop.index0].value }}" />
                <label class="form-check-label" for="{{ form.tags.vars.id }}_{{ loop.index0 }}"
                       style="padding-left: 30px; padding-top: 2px;">{{ form.tags.vars.choices[loop.index0].label }}</label>
            </div>
        {% endfor %}
    </div>
</div>

<div class="form-row mt-4">
    <div class="col-12">
        <div class="h5-responsive border border-primary border-top-0 border-left-0 border-right-0">
            <div class="badge badge-primary d-inline-block mr-1" style="position: relative; bottom: 6px;">3</div>
            <div class="text-primary d-inline-block font-weight-stone-600">Image</div>
        </div>
    </div>
</div>
<div class="form-row mt-4">
    <div class="col-5 col-md-4 col-lg-3">
        <div class="file-field">
            <div class="btn btn-mdb-color float-left">
                <span>Choisir une photo</span>
                <input type="file" name="{{ form.file.children.file.vars.full_name }}" id="entity-image" />
            </div>
        </div>
    </div>
    <div class="col-4 col-md-2">
        <img src="{{ vich_uploader_asset(product, 'file') }}" alt="" class="img-fluid img-thumbnail" id="image-view" />
    </div>
</div>


