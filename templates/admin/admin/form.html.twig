<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive border border-secondary border-top-0 border-left-0 border-right-0">
            <div class="badge badge-secondary d-inline-block mr-1" style="position: relative; bottom: 6px;">1</div>
            <div class="text-secondary d-inline-block font-weight-stone-600">Information de base</div>
        </div>
    </div>
</div>
<div class="row d-flex justify-content-center justify-content-md-start mb-5">
    <div class="col-12 col-md-4">
        {{ form_row(form.lastName) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.firstName) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.email) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        {{ form_row(form.phone) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        <div>
            <div>
                {{ form_widget(form.roles) }}
                <label class=" ml-3">{{ form.roles.vars.label|raw }}</label>
            </div>
            <small class="form-text text-muted" style="margin-top: -20px">
                Ce champ est obligatoire
            </small>
            <div style="margin-top: -15px;" class="red-text font-weight-stone-500">{{ form_errors(form.roles) }}</div>
        </div>
    </div>
</div>

<div class="form-row mt-4">
    <div class="col-12">
        <div class="h5-responsive border border-secondary border-top-0 border-left-0 border-right-0">
            <div class="badge badge-secondary d-inline-block mr-1" style="position: relative; bottom: 6px;">2</div>
            <div class="text-secondary d-inline-block font-weight-stone-600">status</div>
        </div>
    </div>
</div>
<div class="form-row mb-4">
    <div class="col-12 col-md-4 mt-3">
        <div class="grey-text pb-1">{{ form.enabled.vars.label|trans }}</div>
        <div class="switch stone-switch mt-1 ml-md-2">
            <label>
                Non
                <input type="checkbox" name="{{ form.enabled.vars.full_name }}" id="{{ form.enabled.vars.id }}"
                       value="{{ form.enabled.vars.value }}" {% if form.enabled.vars.checked %}checked="checked{% endif %}">
                <span class="lever"></span>
                Oui
            </label>
        </div>
    </div>
</div>

<div class="form-row">
    <div class="col-12">
        <div class="h5-responsive border border-secondary border-top-0 border-left-0 border-right-0">
            <div class="badge badge-secondary d-inline-block mr-1" style="position: relative; bottom: 6px;">3</div>
            <div class="text-secondary d-inline-block font-weight-stone-600">Mot de passe</div>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-md-3">
        {{ form_row(form.plainPassword.first) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>

    <div class="col-12 col-md-3">
        {{ form_row(form.plainPassword.second) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
</div>


